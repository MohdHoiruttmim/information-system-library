<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <% const { user, level, params, books} = results[0] %>
    <h1>Ini adalah Dashboard</h1>
    <%= level %>
    <div class="container-fluid bg-light">
      <div class="row">
        <div class="col-2 sidebar py-5">
          <div class="avatar">
            <img src="images/user.png" alt="avatar" class="img-thumbnail mx-auto d-block">
            <div class="username text-center">
              <h3><%= user %></h3>
            </div>
          </div>
          <nav>
            <ul class="text-left p-0 m-0">
              <li class="py-1"><a href="/test?tab=users" class="py-2 px-3 d-block rounded <%= (params === `users`)? `active` : `` %>">User</a></li>
              <li class="py-1"><a href="/test?tab=books" class="py-2 px-3 d-block rounded <%= (params === `books`)? `active` : `` %>">Buku</a></li>
              <li class="py-1"><a href="/test?tab=borrows" class="py-2 px-3 d-block rounded <%= (params === `borrows`)? `active` : `` %>">Data Pinjam</a></li>
            </ul>
          </nav>
        </div>
        <div class="col">
          <%= //results[0].params %> 
          <% if (results[0].params == 'books' ) { %>
            <%- include('books') %>
          <% } else if (params == 'users') { %>
              <%- include('users') %>
          <% } %> 
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>